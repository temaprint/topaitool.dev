---
import type { Site } from '../data/categories';
import RatingDisplay from './RatingDisplay.astro';

interface Props {
  site: Site;
}

const { site } = Astro.props;
---

<div class="bg-dark-card rounded-xl p-6 border border-gray-800">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-xl font-bold text-white">{site.name}</h3>
    <span class="px-3 py-1 bg-purple-900 text-purple-100 rounded-full text-sm">{site.pricing}</span>
  </div>
  
  {site.rating && (
    <div class="mb-4">
      <RatingDisplay rating={site.rating} />
    </div>
  )}
  
  <ul class="mb-4 space-y-2">
    {site.features.map(feature => (
      <li class="text-gray-400 flex items-center">
        <span class="mr-2">â€¢</span>
        {feature}
      </li>
    ))}
  </ul>
  
  <div class="flex gap-3">
    <a 
      href={`/site/${site.name.toLowerCase().replace(/\s+/g, '-')}`}
      class="inline-block bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors"
    >
      View Details
    </a>
    <a 
      href={site.url} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="inline-block border border-purple-600 text-purple-400 px-4 py-2 rounded-lg hover:bg-purple-900/20 transition-colors"
    >
      Visit Site
    </a>
  </div>
</div>